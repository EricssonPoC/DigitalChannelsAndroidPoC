<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="PrimaryMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/selector_material_button_text</item>
        <item name="backgroundTint">@color/selector_material_button</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/height_default_button</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">@dimen/radius_8dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="rippleColor">@color/colorPrimary</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
    </style>

</resources>
